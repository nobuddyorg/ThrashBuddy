apiVersion: eksctl.io/v1alpha5
kind: ClusterConfig

metadata:
  name: thrash-buddy-stage
  region: $AWS_DEFAULT_REGION

nodeGroups:
  - name: ingress-nginx-ec2
    instanceType: t3.small
    desiredCapacity: 1
    minSize: 1
    maxSize: 1
    volumeSize: 20
    labels:
      dedicated: ingress
    tags:
      Name: ingress-nginx-ec2
    iam:
      withAddonPolicies:
        autoScaler: true
    availabilityZones:
      - $AZ
      